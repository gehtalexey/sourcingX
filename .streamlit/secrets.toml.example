# Streamlit Cloud Secrets Template
# Copy this to secrets.toml for local testing, or add to Streamlit Cloud settings
# IMPORTANT: API keys must be at the TOP, before any [section] headers

# ===== Keep Alive =====
# Set this to your Streamlit Cloud app URL to prevent it from sleeping.
# Example: "https://your-app-name.streamlit.app"
keep_alive_url = ""

# ===== API Keys =====
# Crustdata API key (for LinkedIn profile enrichment)
api_key = "your_crustdata_api_key"

# OpenAI API key (for AI candidate screening)
openai_api_key = "sk-your_openai_api_key"

# PhantomBuster (for LinkedIn search scraping)
phantombuster_api_key = "your_phantombuster_api_key"
phantombuster_agent_id = "your_agent_id"

# SalesQL API key (for email enrichment)
salesql_api_key = "your_salesql_api_key"

# ===== Supabase Database =====
# Get these from: Supabase Dashboard > Project Settings > API
supabase_url = "https://your-project-id.supabase.co"
supabase_key = "your_supabase_anon_or_service_key"

# ===== Authentication (optional) =====
[auth]
cookie_name = "linkedin_enricher_auth"
cookie_key = "REPLACE_WITH_32_CHAR_RANDOM_STRING"
cookie_expiry_days = 30

[auth.credentials.usernames."user@company.com"]
email = "user@company.com"
first_name = "User"
last_name = "Name"
# Generate hash: python -c "import bcrypt; print(bcrypt.hashpw('password'.encode(), bcrypt.gensalt()).decode())"
password = "$2b$12$BCRYPT_HASHED_PASSWORD_HERE"

# ===== Google Sheets Configuration =====
[filter_sheets]
url = "https://docs.google.com/spreadsheets/d/your_sheet_id/edit"
past_candidates = "Past Candidates"
blacklist = "Blacklist"
not_relevant = "NotRelevant Companies"
target_companies = "Target Companies"
universities = "Universities"
tech_alerts = "Tech Alerts"

# ===== Google Service Account Credentials =====
# Paste the entire JSON content from your service account key file
[google_credentials]
type = "service_account"
project_id = "your-project-id"
private_key_id = "your_private_key_id"
private_key = "-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
client_email = "your-service-account@your-project.iam.gserviceaccount.com"
client_id = "123456789"
auth_uri = "https://accounts.google.com/o/oauth2/auth"
token_uri = "https://oauth2.googleapis.com/token"
auth_provider_x509_cert_url = "https://www.googleapis.com/oauth2/v1/certs"
client_x509_cert_url = "https://www.googleapis.com/robot/v1/metadata/x509/..."
